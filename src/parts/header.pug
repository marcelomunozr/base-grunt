            | Recetas
        li.header-nav-li
          a(href="#calendario")
            i.fas.fa-calendar-alt
            | Calendario


    ul.header-characters-list
      li.header-characters-li.tin
        a.header-character(href="#tin")
          img(src="media/header-tin.png")
