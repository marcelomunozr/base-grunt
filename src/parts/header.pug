        a.header-character(href="#rash")
          img(src="media/header-rash.png")
      li.header-characters-li.jumbito
        a.header-character(href="#jumbito")
          img(src="media/header-jumbito.png")
      li.header-characters-li.zooly
        a.header-character(href="#zooly")
          img(src="media/header-zooly.png")
      li.header-characters-li.rozy
        a.header-character(href="#rozy")
          img(src="media/header-rozy.png")

    a.header-logo(href=(headerClass ? "index.html" : ''))
      img(src='media/logo.png')

  .header-bg
    picture
      source(srcset="media/header-bg-360.jpg", media="(max-width: 360px)")
      source(srcset="media/header-bg-768.jpg", media="(max-width: 768px)")
      source(srcset="media/header-bg.jpg", media="(min-width: 769px)")
      img(src="media/header-bg.jpg")

  a.tag-btn.hidden(href="info.html")
